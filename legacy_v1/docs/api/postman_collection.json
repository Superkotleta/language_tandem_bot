{
  "info": {
    "name": "Language Exchange Bot API",
    "description": "REST API для административного управления Language Exchange Bot",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "YOUR_API_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/metrics",
              "host": ["{{base_url}}"],
              "path": ["metrics"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/stats",
              "host": ["{{base_url}}"],
              "path": ["stats"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Users List",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users?page=1&limit=10&status=active",
              "host": ["{{base_url}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetLanguageLevel\": \"intermediate\",\n  \"profileCompletionLevel\": 90,\n  \"interests\": [1, 3, 5, 7, 9]\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Languages",
      "item": [
        {
          "name": "Get Languages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/languages",
              "host": ["{{base_url}}"],
              "path": ["languages"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Interests",
      "item": [
        {
          "name": "Get Interests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/interests",
              "host": ["{{base_url}}"],
              "path": ["interests"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Get Feedback List",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/feedback?page=1&limit=10&is_processed=false",
              "host": ["{{base_url}}"],
              "path": ["feedback"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "is_processed",
                  "value": "false"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Process Feedback",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"processed\": true,\n  \"adminNotes\": \"Positive feedback processed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/feedback/{{feedback_id}}/process",
              "host": ["{{base_url}}"],
              "path": ["feedback", "{{feedback_id}}", "process"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cache Management",
      "item": [
        {
          "name": "Get Cache Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cache/stats",
              "host": ["{{base_url}}"],
              "path": ["cache", "stats"]
            }
          },
          "response": []
        },
        {
          "name": "Clear Cache",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cache/clear",
              "host": ["{{base_url}}"],
              "path": ["cache", "clear"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Telegram Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"update_id\": 123456789,\n  \"message\": {\n    \"message_id\": 1,\n    \"from\": {\n      \"id\": 987654321,\n      \"is_bot\": false,\n      \"first_name\": \"John\",\n      \"username\": \"john_doe\"\n    },\n    \"chat\": {\n      \"id\": 987654321,\n      \"type\": \"private\"\n    },\n    \"date\": 1640995200,\n    \"text\": \"/start\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/webhook/telegram",
              "host": ["{{base_url}}"],
              "path": ["webhook", "telegram"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate user_id if not set",
          "if (!pm.variables.get('user_id')) {",
          "    pm.variables.set('user_id', Math.floor(Math.random() * 1000) + 1);",
          "}",
          "",
          "// Auto-generate feedback_id if not set",
          "if (!pm.variables.get('feedback_id')) {",
          "    pm.variables.set('feedback_id', Math.floor(Math.random() * 100) + 1);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Common test for all requests",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Response has Content-Type header', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.exist;",
          "});",
          "",
          "// Test for successful responses",
          "if (pm.response.code >= 200 && pm.response.code < 300) {",
          "    pm.test('Response is successful', function () {",
          "        pm.expect(pm.response.code).to.be.oneOf([200, 201, 202]);",
          "    });",
          "}",
          "",
          "// Test for error responses",
          "if (pm.response.code >= 400) {",
          "    pm.test('Error response has error field', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData).to.have.property('error');",
          "    });",
          "}"
        ]
      }
    }
  ]
}
