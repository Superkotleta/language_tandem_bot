# Language Exchange Bot - Production Configuration
# Для production развертывания на VPS

# ===========================================
# Основные настройки
# ===========================================

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Режим отладки (true = polling, false = webhook)
DEBUG=false

# Порт HTTP сервера
PORT=8080

# ===========================================
# База данных PostgreSQL
# ===========================================

# URL подключения к базе данных
DATABASE_URL=postgres://postgres:your_secure_password@db:5432/language_exchange?sslmode=disable

# Настройки PostgreSQL
POSTGRES_DB=language_exchange
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# Redis кэш
# ===========================================

# URL подключения к Redis
REDIS_URL=redis://redis:6379

# Настройки кэша
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# Администраторы
# ===========================================

# Chat ID администраторов (через запятую)
ADMIN_CHAT_IDS=123456789,987654321

# Usernames администраторов (через запятую, без @)
ADMIN_USERNAMES=admin1,admin2

# ===========================================
# Логирование
# ===========================================

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info

# Формат логов (json, text)
LOG_FORMAT=json

# ===========================================
# Мониторинг
# ===========================================

# Включить метрики Prometheus
METRICS_ENABLED=true

# Интервал проверки здоровья
HEALTH_CHECK_INTERVAL=30s

# ===========================================
# Grafana
# ===========================================

# Учетные данные Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# ===========================================
# PgAdmin
# ===========================================

# Учетные данные PgAdmin
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=your_pgadmin_password_here

# ===========================================
# SSL/TLS
# ===========================================

# Включить SSL
SSL_ENABLED=true

# Путь к SSL сертификату
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem

# Путь к SSL ключу
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# Безопасность
# ===========================================

# Секретный ключ для JWT (если используется)
JWT_SECRET=your_jwt_secret_here

# Максимальное количество запросов в минуту
RATE_LIMIT=100

# ===========================================
# Производительность
# ===========================================

# Максимальное количество соединений с БД
DB_MAX_CONNECTIONS=25

# Минимальное количество соединений с БД
DB_MIN_CONNECTIONS=5

# Время жизни соединения с БД (в секундах)
DB_CONNECTION_LIFETIME=3600

# Размер пула соединений Redis
REDIS_POOL_SIZE=10

# ===========================================
# Webhook
# ===========================================

# URL для webhook Telegram
WEBHOOK_URL=https://yourdomain.com/webhook/telegram

# Секретный токен для webhook
WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# Backup
# ===========================================

# Включить автоматические бэкапы
BACKUP_ENABLED=true

# Интервал бэкапов (в часах)
BACKUP_INTERVAL=24

# Путь для хранения бэкапов
BACKUP_PATH=/backups

# ===========================================
# Уведомления
# ===========================================

# Email для уведомлений (если используется)
NOTIFICATION_EMAIL=admin@yourdomain.com

# Slack webhook для уведомлений (если используется)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# ===========================================
# Разработка (отключено в production)
# ===========================================

# Включить профилирование
PROFILING_ENABLED=false

# Порт для профилирования
PROFILING_PORT=6060

# Включить трассировку
TRACING_ENABLED=false

# Endpoint для трассировки
TRACING_ENDPOINT=http://localhost:14268/api/traces
