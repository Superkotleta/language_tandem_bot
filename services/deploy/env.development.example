# Language Exchange Bot - Development Configuration
# Для разработки с ngrok

# ===========================================
# Основные настройки
# ===========================================

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Режим отладки (true = polling, false = webhook)
DEBUG=true

# Порт HTTP сервера
PORT=8080

# ===========================================
# База данных PostgreSQL
# ===========================================

# URL подключения к базе данных
DATABASE_URL=postgres://postgres:dev_password@localhost:5432/language_exchange?sslmode=disable

# Настройки PostgreSQL
POSTGRES_DB=language_exchange
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# ===========================================
# Redis кэш (опционально)
# ===========================================

# URL подключения к Redis (оставьте пустым для in-memory кэша)
# REDIS_URL=redis://localhost:6379

# ===========================================
# Администраторы
# ===========================================

# Chat ID администраторов (через запятую)
ADMIN_CHAT_IDS=123456789

# Usernames администраторов (через запятую, без @)
ADMIN_USERNAMES=your_username

# ===========================================
# Логирование
# ===========================================

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=debug

# Формат логов (json, text)
LOG_FORMAT=text

# ===========================================
# Мониторинг
# ===========================================

# Включить метрики Prometheus
METRICS_ENABLED=true

# Интервал проверки здоровья
HEALTH_CHECK_INTERVAL=30s

# ===========================================
# Webhook (будет настроен автоматически ngrok)
# ===========================================

# URL для webhook Telegram (настраивается автоматически)
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook/telegram

# ===========================================
# Разработка
# ===========================================

# Включить профилирование
PROFILING_ENABLED=true

# Порт для профилирования
PROFILING_PORT=6060

# Включить трассировку
TRACING_ENABLED=true

# Endpoint для трассировки
TRACING_ENDPOINT=http://localhost:14268/api/traces
