# ===========================================
# Language Exchange Bot - Configuration Template
# ===========================================
# РЎРєРѕРїРёСЂСѓР№С‚Рµ СЌС‚РѕС‚ С„Р°Р№Р» РІ .env Рё Р·Р°РїРѕР»РЅРёС‚Рµ СЂРµР°Р»СЊРЅС‹РјРё Р·РЅР°С‡РµРЅРёСЏРјРё

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=language_exchange
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://postgres:your_secure_password_here@postgres:5432/language_exchange?sslmode=disable

# Database Schema Configuration
DB_SCHEMA=public

# Database Passwords for Services
PROFILE_DB_PASS=profile_pwd
MATCHING_DB_PASS=matching_pwd
MATCHING_RO_DB_PASS=matching_ro_pwd

# ===========================================
# Telegram Bot Configuration
# ===========================================
# РџРѕР»СѓС‡РёС‚Рµ С‚РѕРєРµРЅ Сѓ @BotFather РІ Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ===========================================
# Admin Configuration
# ===========================================
# РЈРєР°Р¶РёС‚Рµ Chat ID РёР»Рё username Р°РґРјРёРЅРёСЃС‚СЂР°С‚РѕСЂРѕРІ С‡РµСЂРµР· Р·Р°РїСЏС‚СѓСЋ
ADMIN_CHAT_IDS=@your_username
ADMIN_USERNAMES=@your_username

# ===========================================
# Bot Settings
# ===========================================
DEBUG=false
ENABLE_TELEGRAM=true
ENABLE_DISCORD=false

# ===========================================
# Server Configuration
# ===========================================
PORT=8080
WEBHOOK_URL=

# ===========================================
# Localization Configuration
# ===========================================
LOCALES_DIR=./locales

# ===========================================
# Redis Configuration (NEW)
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX_MEMORY=256mb

# ===========================================
# PgAdmin Configuration
# ===========================================
PGADMIN_EMAIL=admin@local.host
PGADMIN_PASSWORD=your_pgadmin_password_here

# ===========================================
# Service Ports
# ===========================================
HTTP_PORT=8081
MATCHER_HTTP_PORT=8082

# ===========================================
# Migration Configuration
# ===========================================
MIGRATIONS_DIR=/migrations

# ===========================================
# Logging Configuration (NEW)
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# ===========================================
# Error Handling Configuration (NEW)
# ===========================================
ENABLE_ERROR_ALERTING=true
ERROR_WEBHOOK_URL=
REQUEST_TIMEOUT=30

# ===========================================
# Validation Configuration (NEW)
# ===========================================
ENABLE_VALIDATION=true
MAX_MESSAGE_LENGTH=4096
MAX_USERNAME_LENGTH=32
